{
  "name": "article-template",
  "version": "1.0.0",
  "description": "template for developing a standalone carbonplan research article",
  "main": "index.js",
  "scripts": {
    "dev": "next -p 5001",
    "build": "next build",
    "start": "next start",
    "format": "npm run format-js && npm run format-md",
    "format-js": "prettier --write '*.js' '{components,pages,article,tool}/**/*.js'",
    "format-md": "prettier --write README.md 'article/**/*.md' --parser mdx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carbonplan/article-template.git"
  },
  "author": "carbonplan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carbonplan/article-template/issues"
  },
  "homepage": "https://github.com/carbonplan/article-template#readme",
  "dependencies": {
    "@carbonplan/colormaps": "^4.0.0",
    "@carbonplan/components": "^12.0.0",
    "@carbonplan/icons": "^2.0.0",
    "@carbonplan/layouts": "^3.0.0",
    "@carbonplan/minimaps": "^2.1.0",
    "@carbonplan/prism": "^2.0.0",
    "@carbonplan/theme": "^8.0.0",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mdx-js/loader": "^2.1.5",
    "@mdx-js/react": "^2.1.5",
    "@next/mdx": "^12.3.1",
    "@theme-ui/color": "^0.15.3",
    "d3-format": "^3.1.0",
    "d3-geo": "^3.1.0",
    "ndarray": "^1.0.19",
    "ndarray-concat-cols": "^1.0.0",
    "ndarray-concat-rows": "^1.0.1",
    "next": "^12.0.7",
    "numcodecs": "^0.2.2",
    "react": "^18.2.0",
    "react-animate-height": "^3.0.5",
    "react-dom": "^18.2.0",
    "theme-ui": "^0.15.3",
    "zarrita": "^0.2.2",
    "zustand": "^4.1.4"
  },
  "devDependencies": {
    "prettier": "2.3.2"
  }
}
